{
  "annotations": { "list": [] },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU (user+system) seconds/sec",
      "description": "Сумма user+system CPU в секунду. Можно фильтровать по App / Env / Instance.",
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total{job=\"monitoring-app\",app=~\"$app\",env=~\"production\",instance=~\"$instance\"}[1m]) + rate(process_cpu_system_seconds_total{job=\"monitoring-app\",app=~\"$app\",env=~\"production\",instance=~\"$instance\"}[1m])",
          "legendFormat": "{{app}} {{env}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Memory RSS (MB)",
      "description": "Объём resident memory (RSS) процесса в мегабайтах. Исключает метрики других job (например, Prometheus).",
      "fieldConfig": { "defaults": { "unit": "megabytes", "decimals": 2 } },
      "targets": [
        { "expr": "process_resident_memory_bytes{job=\"monitoring-app\",app=~\"$app\",env=~\"production\",instance=~\"$instance\"} / 1024 / 1024", "legendFormat": "{{instance}} {{app}} {{env}}", "refId": "B" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Event count [5m] (spin, auth)",
      "targets": [
        {
          "expr": "sum by (event) (increase(game_event_duration_seconds_count{job=\"monitoring-app\",service=~\"${service:regex}\",instance=~\"${instance:regex}\",event=\"action:Spin\",env=~\"production\"}[5m]))",
          "legendFormat": "{{event}} {{service}}",
          "refId": "A"
        },
        {
          "expr": "sum by (event) (increase(game_event_duration_seconds_count{job=\"monitoring-app\",service=~\"${service:regex}\",instance=~\"${instance:regex}\",event=\"auth\",env=~\"production\"}[5m]))",
          "legendFormat": "{{event}} {{service}}",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Event count [5m]",
      "targets": [
        {
          "expr": "sum by (event) (increase(game_event_duration_seconds_count{job=\"monitoring-app\",service=~\"${service:regex}\",instance=~\"${instance:regex}\",env=~\"production\"}[5m]))",
          "legendFormat": "{{event}} {{service}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "WS Event Duration",
      "description": "Средняя длительность WS‑событий (сек) по комбинациям; показываются только положительные значения.",
      "fieldConfig": { "defaults": { "unit": "seconds", "decimals": 2 } },
      "targets": [
        {
          "expr": "clamp_min((sum by (event,direction,result) (rate(game_event_duration_seconds_count{job=\"monitoring-app\",service=~\"${service:regex}\",instance=~\"${instance:regex}\",app=~\"$app\",env=~\"production\",result=\"ok\"}[5m])) / sum by (event,direction,result) (rate(ws_event_duration_seconds_count{job=\"monitoring-app\",service=~\"${service:regex}\",instance=~\"${instance:regex}\",app=~\"$app\",env=~\"production\",result=\"ok\"}[5m]))/1000), 0)",
          "legendFormat": "{{event}} {{direction}}",
          "refId": "A"
        }
       ],
       "gridPos": { "x": 12, "y": 12, "w": 24, "h": 8 }
     },
    {
      "type": "timeseries",
      "title": "Active Handles / Active Requests",
      "description": "Количество активных дескрипторов и активных запросов в Node.js (handles / requests).",
      "targets": [
        { "expr": "nodejs_active_handles_total{app=~\"$app\",env=~\"production\"}", "legendFormat": "handles", "refId": "E" },
        { "expr": "nodejs_active_requests_total{app=~\"$app\",env=~\"production\"}", "legendFormat": "requests", "refId": "F" }
      ],
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Event Loop Lag (seconds)",
      "description": "Задержка event loop в секундах — показатель блокировок/задержек в приложении.",
      "targets": [
        { "expr": "nodejs_eventloop_lag_seconds{app=~\"$app\",env=~\"production\"}", "legendFormat": "{{app}} {{env}}", "refId": "D" }
      ],
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 6 }
    }
  ],
  "refresh": "15s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["app","nodejs"],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "app",
        "label": "App",
        "datasource": "Prometheus",
        "query": "label_values(process_resident_memory_bytes{job=\"monitoring-app\"}, app)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 0
      },
      {
        "type": "query",
        "name": "service",
        "label": "Service",
        "datasource": "Prometheus",
        "query": "label_values(game_event_duration_seconds_count, service)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 0
      },
      {
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "datasource": "Prometheus",
        "query": "label_values(game_event_duration_seconds_count{job=\"monitoring-app\"}, instance)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 0
      }
    ]
  },
  "time": { "from": "now-1h","to": "now" },
  "timepicker": {},
  "title": "Application Overview [production]",
  "version": 1
}
